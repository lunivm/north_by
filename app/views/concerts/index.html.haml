%p#notice= notice
%h1 Concerts
%table
  %thead
    %tr
      %th Name
      %th Description
      %th Start time
      %th Venue
      %th Genre tags
      %th Ilk
      %th Access
      %th{:colspan => "3"}
  %tbody
    - @concerts.each do |concert|
      %tr
        %td= concert.name
        %td= concert.description
        %td= concert.start_time
        %td= concert.venue_id
        %td= concert.genre_tags
        %td= concert.ilk
        %td= concert.access
        %td= link_to "Show", concert
        %td= link_to "Edit", edit_concert_path(concert)
        %td= link_to "Destroy", concert, method: :delete, data: {confirm: "Are you sure?"}
%br/
= link_to "New Concert", new_concert_path
