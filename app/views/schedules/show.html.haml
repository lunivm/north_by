%section
  %section
    .grid.grid-cols-7.gap-0.mb-6
      - @schedule.schedule_days.each do |schedule_day|
        - date_string = schedule_day.day.by_example("2006-01-02")
        %section.column
          .text-center
            = schedule_day.day.by_example("Jan 2")
      %div
        Show All
    .flex.justify-center
      %div{:class => "w-4/5"}
        = text_field_tag("query", "",                                  |
          placeholder: "Search concerts", type: "search",              |
          id: "search_query",                                          |
          class: "w-full px-3 py-2 border border-gray-400 rounded-lg") |
  %br/
  - if current_user
    = render("favorites/list")
  %section.js--day
    - @schedule.schedule_days.each do |schedule_day|
      - date_string = schedule_day.day.by_example("2006-01-02")
      %section.day-body{:id => "day-body-#{schedule_day.day_string}"}
        = render(schedule_day, show: !schedule_day.hidden)
      %br/
