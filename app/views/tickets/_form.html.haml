= simple_form_for(@ticket) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?
  .form-inputs
    = f.association :concert
    = f.input :row
    = f.input :number
    = f.association :user
    = f.input :status
  .form-actions
    = f.button :submit
