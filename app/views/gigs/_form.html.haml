= simple_form_for(@gig) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?
  .form-inputs
    = f.association :band
    = f.association :concert
    = f.input :order
    = f.input :duration_minutes
  .form-actions
    = f.button :submit
