= simple_form_for(@venue) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?
  .form-inputs
    = f.input :name
    = f.input :description
    = f.input :rows
    = f.input :seats_per_row
  .form-actions
    = f.button :submit
